<UserControl
    x:Class="NonogramAvalonia.Views.MenuView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="using:NonogramAvalonia.Resources"
    xmlns:vm="using:NonogramAvalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:MenuViewModel"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="Button:pressed">
            <Setter Property="RenderTransform" Value="{x:Null}" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="*,auto">
        <ItemsControl x:Name="boards" ItemsSource="{Binding AvailableBoards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        HorizontalAlignment="Stretch"
                        BorderBrush="Orange"
                        BorderThickness="1"
                        Command="{Binding #boards.((vm:MenuViewModel)DataContext).PlayCommand}"
                        CommandParameter="{Binding}"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Nonogram.Name}" />
                            <TextBlock>
                                <Run Text="{Binding Nonogram.RowCount}" />
                                <Run Text="x" />
                                <Run Text="{Binding Nonogram.ColumnCount}" />
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Margin="0,8,0,8"
                Classes="accent"
                Command="{Binding CreateBoardCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <PathIcon Data="{x:Static res:AppIcons.CreateBoardIcon}" />
                    <TextBlock Text="Create New Board" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
