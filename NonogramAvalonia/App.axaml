<Application
    x:Class="NonogramAvalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="using:NonogramAvalonia.Converters"
    xmlns:local="using:NonogramAvalonia"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://NonogramAvalonia/BoardThemes/BoardStyles.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://NonogramAvalonia/BoardThemes/DefaultCellTheme.axaml" />
                <ResourceInclude Source="avares://NonogramAvalonia/BoardThemes/PlainCellTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
