<Application
    x:Class="NonogramAvalonia.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="using:NonogramAvalonia.Converters"
    xmlns:local="using:NonogramAvalonia"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://NonogramAvalonia/AppStyles.axaml" />
        <StyleInclude Source="avares://NonogramAvalonia/BoardThemes/BoardStyles.axaml" />
    </Application.Styles>
</Application>
