<Window
    x:Class="NonogramAvalonia.Views.ShellView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="using:NonogramAvalonia.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:NonogramAvalonia.ViewModels"
    Title="ShellView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:ShellViewModel"
    mc:Ignorable="d">
    <Grid RowDefinitions="auto, *, auto">
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding RequestBoardCommand}" Header="Open" />
                <MenuItem Click="ExitApplication" Header="Exit" />
            </MenuItem>
        </Menu>

        <ContentControl Grid.Row="1" Content="{Binding ActiveBoard}" />

        <DockPanel Grid.Row="2">
            <TextBlock DockPanel.Dock="Right" Text="{Binding TimeElapsed, Converter={x:Static con:AppConverters.TimeSpanToTimerString}}" />
            <TextBlock Text="{Binding ActiveBoard.PuzzleName, StringFormat=Now Playing: {0}}" />
        </DockPanel>
    </Grid>
</Window>
